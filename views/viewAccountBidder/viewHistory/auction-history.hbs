{{#section 'js'}}
    <script>
        $('#homePageNavbar').hide();

    </script>
{{/section}}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 has-background-grey-lighter" style="background: #1b1e21; height: 100vh">
            <ul class="nav flex-column">
                <div class="h3 text-center ml-auto mr-auto p-4" style="color: #FFFFFF">Lịch sử đấu giá</div>
                <hr class="navbar-divider">

                <li class="nav-item">
                    <a class="nav-link h4 text-center" href="/user/auction-history" style="background: #FFFFFF">Đang đấu giá</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h4 text-center bg-light" style="color: #FFFFFF" href="/user/auction-already-history">Đấu giá thành công</a>
                </li>
            </ul>
        </div>
        <div class="col-sm-9">
            {{#each this.product}}
                {{#each details}}
                <a href="/product/{{_id}}" class="text-decoration-none">
                        {{#if curBidderInfo}}
                <div class="product mb-2 ml-auto mr-auto has-background-success-light" style="width: 70vw;">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="/public/{{_id}}/main-thumb.jpg" class="card-img" alt="..." style="height: 34vh">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h4 class="card-title h5"><strong>{{proName}}</strong></h4>
                                <p class="card-text">Giá hiện tại: {{format_number proCurBidPrice}}VND.</p>
                                <p class="card-text">Ngày hết hạn: {{proEndDate}}</p>
                                <hr>
                                <p class="card-text">Ngày đấu giá: {{../dateBid}}</p>
                                <p class="card-text">Giá của bạn: {{format_number ../price}}VND</p>
                                <div class="d-flex flex-row-reverse">
                                    <i class="fa fa-flag fa-3x" aria-hidden="true">  #1</i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                            {{else}}
                            <div class="card mb-2 ml-auto mr-auto" style="width: 70vw;">
                                <div class="row no-gutters">
                                    <div class="col-md-4">
                                        <img src="/public/{{_id}}/main-thumb.jpg" class="card-img" alt="..." style="height: 34vh">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h4 class="card-title h5"><strong>{{proName}}</strong></h4>
                                            <p class="card-text">Giá hiện tại: {{format_number proCurBidPrice}}VND.</p>
                                            <p class="card-text">Ngày hết hạn: {{proEndDate}}</p>
                                            <hr>
                                            <p class="card-text">Ngày đấu giá: {{../dateBid}}</p>
                                            <div class="d-flex">
                                                <p class="card-text">Giá của bạn: {{format_number ../price}}VND</p>
                                                <!--                                    <div class="flex-fill"><a href="#"><button class="btn btn-primary float-right" aria-hidden="true">Nhận xét</button></a></div>-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/if}}


                </a>
                {{/each}}
            {{else}}
                <p class="h4 text-center mt-5">Bạn chưa đấu giá sản phẩm nào cả, hãy đấu giá ngay</p>
            {{/each}}
        </div>

    </div>
</div>