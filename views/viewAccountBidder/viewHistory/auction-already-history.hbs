{{#section 'js'}}
    <script>
        $('#homePageNavbar').hide();

    </script>
{{/section}}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 has-background-grey-lighter">
            <ul class="nav flex-column">
                <div class="h4 text-center ml-auto mr-auto p-4">Lịch sử đấu giá</div>
                <hr class="navbar-divider">

                <li class="nav-item">
                    <a class="nav-link h6 text-center" href="/user/auction-history">Đang đấu giá</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h6 text-center bg-light  " href="/user/auction-already-history">Đấu giá thành công</a>
                </li>
            </ul>
        </div>
        <div class="col-sm-9">
            {{#each this.product}}
                {{#each details}}
                    <div class="card mb-2 ml-auto mr-auto" style="width: 70vw;">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="/public/{{_id}}/main-thumb.jpg" class="card-img" alt="..." style="height: max-content">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><strong>{{proName}}</strong></h5>
                                    <p class="card-text">Ngày đấu giá: {{../dateBid}}</p>
                                    <p class="card-text">Ngày hết hạn: {{proEndDate}}</p>
                                    <p class="card-text mt-1">Giá: {{format_number proCurBidPrice}}VNĐ</p>
                                    <div class="d-flex mt-2">
                                        <p class="card-text"><a href="/product/{{_id}}"><button class="btn btn-primary">Sản phẩm</button></a></p>
                                        {{#unless isBidderComment}}
                                            <div class="flex-fill">
                                                <a href="/user/auction-already-comment?id={{_id}}"><button class="btn btn-primary float-right" aria-hidden="true">Nhận xét</button>
                                            </div>
                                        {{else}}
                                            <div class="flex-fill">
                                                <a href="#"><button class="btn btn-secondary float-right" aria-hidden="true" disabled>Đã nhận xét</button></a>
                                            </div>
                                        {{/unless}}
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}

            {{else}}
                <p class="h4 text-center mt-5">Bạn chưa đấu giá thành công sản phẩm nào cả, hãy đấu giá ngay</p>
            {{/each}}
        </div>

    </div>
</div>