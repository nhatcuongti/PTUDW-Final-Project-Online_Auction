{{#section 'js'}}
    <script>
        $('#homePageNavbar').hide();

        $('#btn1').on('click', function (e) {
            $('#btn1').each(function () {
                $(this).addClass('active');
                $(this).css('color', '#ff1900');
            })
            $('#radioLike').each(function () {
                $(this).prop("checked", true);
            })
            $('#btn2').each(function () {
                $(this).removeClass('active');
                $(this).css('color', '#000000');
            })
        });
        $('#btn2').on('click', function (e) {
            $('#btn2').each(function () {
                $(this).addClass('active');
                $(this).css('color', '#ff1900');
            })
            $('#radioDisLike').each(function () {
                $(this).prop("checked", true);
            })
            $('#btn1').each(function () {
                $(this).removeClass('active');

                $(this).css('color', '#000000');
            })
        });
    </script>
{{/section}}

{{#section 'css'}}
    <style>
        .row {
            display: -webkit-box;
            display: -webkit-flex;
            display: -ms-flexbox;
            display: flex;
            flex-wrap: wrap;
        }
        .row > [class*='col-'] {
            display: flex;
            flex-direction: column;
        }

    </style>
{{/section}}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-3" style="background-color: #15161D;">
            <ul class="nav flex-column">
                <div class="h3 text-center ml-auto mr-auto p-4" style="color: #FFFFFF"><strong>Lịch sử đấu giá</strong></div>
                <hr class="navbar-divider">

                <li class="nav-item">
                    <a class="nav-link h4 text-center" href="/user/auction-history" style="color: #FFFFFF">Đang đấu giá</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link h4 text-center bg-light" style="background: #FFFFFF" href="/user/auction-already-history">Đấu giá thành công</a>
                </li>
            </ul>
        </div>
        <div class="col-sm-9">
            {{#each this.product}}
