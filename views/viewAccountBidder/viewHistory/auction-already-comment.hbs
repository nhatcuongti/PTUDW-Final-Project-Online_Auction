                                    <img src="/public/{{_id}}/main-thumb.jpg" class="product-img" alt="..." style="height: 200px; width: 200px">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="product-name" style="margin-top: 10px"><strong>{{proName}}</strong></h5>
                                        <p class="card-text">Ngày đấu giá: {{../dateBid}}</p>
                                        <p class="card-text">Ngày hết hạn: {{proEndDate}}</p>
                                        <p class="card-text mt-1">Giá: {{format_number proCurBidPrice}}VNĐ</p>



                                    </div>
