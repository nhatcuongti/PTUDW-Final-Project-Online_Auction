    <script>
        $('#confirm').on('click', function (e){
            const val = $('#frmPrice').val()
            if (val === "") {
                $('#frmPrice').attr('placeholder', 'Bạn phải nhập giá')
                document.documentgetElementById('text').innerHTML = '<strong class="has-text-danger">Mật khẩu nhập lại không đúng.</strong>';
                return;
            }
            else
            $('#formcheckout').submit();
        });

    </script>

