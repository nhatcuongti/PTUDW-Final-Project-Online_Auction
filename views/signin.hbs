{{#section 'css'}}
    <style>
        #footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
{{/section}}

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <p class="has-text-centered h3">ĐĂNG NHẬP</p>
        <form action="/login" method="post">
            <div class="field">
                <label class="label">Email</label>
                <div class="control has-icons-left">
                    <input class="input" type="email" placeholder="Nhập email" autofocus name="email" required>
                    <span class="icon is-small is-left">
                      <i class="fa fa-envelope"></i>
                    </span>
                </div>
            </div>
            <div class="field">
                <label class="label">Mật khẩu</label>
                <div class="control has-icons-left">
                    <input class="input" type="password" placeholder="Nhập mật khẩu" name="pass" required>
                    <span class="icon is-small is-left">
                      <i class="fa fa-lock"></i>
                    </span>
                </div>
            </div>
            {{#if err_msg}}
                <p><strong class="has-text-danger">{{err_msg}}</strong></p>
            {{/if}}
            <p>
                <a style="text-decoration:none" href="/forget-password">Quên mật khẩu?</a>
            </p>
            <div class="d-flex justify-content-end">
                <button class="button is-success is-rounded" type="submit">Đăng nhập</button>
            </div>
        </form>
    </div>
</div>
<p>&nbsp;</p>