{{#section 'js'}}
    <script>
        $('#frmRegister').on('submit', function (e) {
            e.preventDefault();
            const email = $('#email').val();
            $.getJSON(`/account?email=${email}`, function (data) {
                if (data === false) {
                    document.getElementById('text').innerHTML = '<strong class="text-success">Đã xác nhận yêu cầu thay đổi mật khẩu. Vui lòng kiểm tra email của bạn.</strong>'
                    $('#frmRegister').off('submit').submit();
                }
                else {
                    document.getElementById('text').innerHTML = '<strong class="text-danger">Email không tồn tại.</strong>';
                }
            });
        });
    </script>
{{/section}}

