<div class="row">
<div class="col-4"></div>
<div class="col-4">
  <p class="has-text-centered h3">ĐĂNG KÝ</p>
  <form>
    <div class="field">
      <label class="label">Email</label>
      <div class="control has-icons-left">
        <input class="input" type="email" placeholder="Nhập email" autofocus>
        <span class="icon is-small is-left">
          <i class="fa fa-envelope"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <label class="label">Họ tên</label>
      <div class="control has-icons-left">
        <input class="input" type="text" placeholder="Nhập họ và tên">
        <span class="icon is-small is-left">
          <i class="fa fa-user"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <label class="label">Địa chỉ</label>
      <div class="control has-icons-left">
        <input class="input" type="text" placeholder="Nhập địa chỉ">
        <span class="icon is-small is-left">
          <i class="fa fa-map-marker"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <label class="label">Mật khẩu</label>
      <div class="control has-icons-left">
        <input class="input" type="password" placeholder="Nhập mật khẩu">
        <span class="icon is-small is-left">
          <i class="fa fa-lock"></i>
        </span>
      </div>
    </div>
    <div class="field">
      <label class="label">Xác nhận mật khẩu</label>
      <div class="control has-icons-left">
        <input class="input" type="password" placeholder="Nhập lại mật khẩu">
        <span class="icon is-small is-left">
          <i class="fa fa-lock"></i>
        </span>
      </div>
    </div>
    <p>&nbsp;</p>
    <button class="button is-success is-rounded" type="submit">Đăng ký</button>
  </form>
</div>
</div>
<p>&nbsp;</p>