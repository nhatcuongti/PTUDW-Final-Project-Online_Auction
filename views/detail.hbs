{{#each this.proInfo}}
    <div class="row">
        <div class="col-1"></div>
        <div class="col-5">
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="https://www.planetware.com/wpimages/2020/02/france-in-pictures-beautiful-places-to-photograph-eiffel-tower.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="https://www.planetware.com/wpimages/2020/02/france-in-pictures-beautiful-places-to-photograph-eiffel-tower.jpg" class="d-block w-100" alt="...">
              </div>
              <div class="carousel-item">
                <img src="https://www.planetware.com/wpimages/2020/02/france-in-pictures-beautiful-places-to-photograph-eiffel-tower.jpg" class="d-block w-100" alt="...">
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </button>
          </div>
        </div>
        <div class="col-6">
          <p class="h3">{{proName}}</p>
          <p>{{proDescription}}</p>
          <p>&nbsp;</p>
          <div class="row">
            <div class="col-6">
              <p>Thông tin người bán: {{sellerInfo}}</p>
            </div>
            <div class="col-6">
              <p>Thông tin người đấu hiện tại: {{curBidderInfo}}</p>
            </div>
          </div>
          <p>&nbsp;</p>
          <p> <strong> Giá đấu hiện tại: {{format_number proCurBidPrice}}</strong> </p>
          <p> <strong> Giá mua ngay: {{format_number proBuyNowPrice}} </strong> </p>
          <p>&nbsp;</p>
          <div class="row">
            <div class="col-12">
              <button type="button" class="btn is-info btn-lg btn-block button is-rounded">Thêm vào yêu thích</button>
              <button type="button" class="btn is-warning btn-lg btn-block button is-rounded">Đấu giá</button>
              <button type="button" class="btn is-danger btn-lg btn-block button is-rounded">Mua ngay</button>
            </div>
          </div>
        </div>
    </div>
    <p>&nbsp;</p>
    <div class="row justify-content-center">
        {{#each ../listSimilarity}}
            <div class = "col-2">
                <a style="text-decoration:none" href="/product/{{_id}}">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-4by3">
                                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="media">
                                <div class="media-content">
                                    <p class="title is-5">{{proName}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
{{/each}}
<p>&nbsp;</p>