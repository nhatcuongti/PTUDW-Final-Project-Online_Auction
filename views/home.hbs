{{#section 'js'}}
    <script>
        $('.addItemFavorite').on('click', function (e){
            const id = $(this).data('id');
            $('#txtProID').val(id);
            $('#formAddFavorite').submit();
            alert("Đã thêm vào danh sách yêu thích")
        });
    </script>
{{/section}}

<form action="/user/favorite/add" method="post" id="formAddFavorite">
    <input type="text" name="id" id="txtProID" hidden>
</form>

<p class="has-text-centered h5">
    Lần cuối cập nhật: <strong> {{this.now}} </strong>
</p>
<p class="has-text-centered h2">
    <strong> TOP 5 SẢN PHẨM GẦN KẾT THÚC </strong>
</p>
<div class="row justify-content-center">
    {{#each this.listExpiration}}
        <div class="card" style="width: 18.5rem;">
            <a style="text-decoration:none" href="/product/{{_id}}">
                <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
            </a>
            {{#if ../auth}}
                <div class="content">
                    <a data-id="{{_id}}" class="addItemFavorite"><button type="button" class="btn is-info btn-lg btn-block button is-rounded mb-1">Thêm vào yêu thích</button></a>
                </div>
            {{/if}}
            <div class="card-content">
                <div class="media">
                    <div class="media-content">
                        <a style="text-decoration:none" href="/product/{{_id}}">
                            <p class="title is-4">{{proName}}</p>
                        </a>
                    </div>
                </div>
                <div class="content">
                    <p> Giá hiện tại: {{format_number proCurBidPrice}}</p>
                    <p> Người đặt hiện tại: {{curBidderInfo}} </p>
                    <p> Giá mua ngay: {{format_number proBuyNowPrice}}</p>
                    <p> Ngày đăng sản phẩm: {{proStartDate}}</p>
                    <p> Thời gian còn lại: {{format_number time}} giờ</p>
                    <p> Số lượt ra giá: {{proBidQuantity}}</p>
                </div>
            </div>
        </div>
    {{/each}}
</div>
