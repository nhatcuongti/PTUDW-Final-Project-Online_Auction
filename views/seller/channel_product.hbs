{{#section 'js'}}
    <script>
        $('.clickElement').on("click", (e) => {
            alert($(this).data('time'));
        })
    </script>




{{/section}}

 <div class="container">
    <div class="card-header row">
        <div class="col-md-6 mt-2">
            <div class="input-group">
                <div class="input-group-prepend">
                  <div class="input-group-text" id="btnGroupAddon">Hiển thị theo</div>
                </div>
                <div class="dropdow">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                      Tất cả
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item" href="#">Đang đấu giá</a>
                      <a class="dropdown-item" href="#">Sắp hết hạn</a>
                      <a class="dropdown-item" href="#">Chưa được đấu giá</a>
                      <a class="dropdown-item" href="#">Đã hết hạn</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-2">
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Product Name..." aria-label="Recipient's username" aria-describedby="button-addon2">
                <div class="input-group-append">
                  <button class="btn btn-outline-secondary" type="button" id="button-addon2">
                      Search
                      <i class="fa fa-search" aria-hidden="true"></i>
                  </button>
                </div>
              </div>
        </div>


    </div>


     <div class="row">
         <nav class="navbar" id="homePageNavbar" role="navigation" aria-label="dropdown navigation">
             <a style="text-decoration:none" class="navbar-link" href="/seller/channel/product">
                 <strong> Tất cả</strong>
             </a>
             {{#each this.categories}}
                 <div class="navbar-item has-dropdown is-hoverable">
                     <a style="text-decoration:none" class="navbar-link" href="/seller/channel/product/?catParent={{_id}}">
                         <strong> {{catParent}}</strong>
                     </a>
                     <div class="navbar-dropdown">
                         {{#each catChild}}
                             <a class="navbar-item" href="/seller/channel/product/?catParent={{../_id}}&catChild={{@index}}">
                                 {{name}}
                             </a>
                         {{/each}}
                     </div>
                 </div>
             {{/each}}
         </nav>
     </div>


    <div class="row mt-3" >
        {{#each this.products}}
            <a class="col-lg-4 col-md-6 p-3 clickElement" style="text-decoration: none" href="/seller/channel/product/detail/{{_id}}">
                    <div class="card h-100">
                        <img src = "https://htsport.vn/wp-content/uploads/2019/11/4-size-giay-lon-nhat-1-300x300.jpg"
                             class="card-img-top"
                             alt="Hình"
                             width="200"
                             height="200">

                        <div class="card-body">
                            <p class="h4 font-weight-bold">{{proName}}</p>
                            <p >
                                {{format_duration proEndDate}}
                            </p>
                        </div>


                        <div class="card-footer justify-content-between">
                            <p class="h5">
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <span class="countTime" data-time="{{proEndDate}}">
                                    {{format_duration proEndDate}}
                                </span>
                            </p>

                            <p class="h4">
                                {{format_number proCurBidPrice}} ₫
                            </p>
                        </div>
                    </div>
            </a>
        {{/each}}

    </div>


     <nav class="pagination is-right is-rounded is-medium" role="navigation" aria-label="pagination">
         {{#if this.prevPage.check}}
                 <a class="pagination-previous page-link" style="text-decoration:none" href="/seller/channel/product/?page={{this.prevPage.value}}">Previous page</a>
         {{/if}}

         {{#if this.nextPage.check}}
             <a class="pagination-next page-link" style="text-decoration:none" href="/seller/channel/product/?page={{this.nextPage.value}}">Next page</a>
         {{/if}}

         <ul class="pagination-list">
             {{#if this.prevPage.check}}
                     <li><a class="pagination-link page-link" style="text-decoration:none" href="/seller/channel/product/?page={{this.prevPage.value}}">{{this.prevPage.value}}</a></li>
             {{/if}}

             <li><a style="text-decoration:none" class="pagination-link is-current">{{this.curPage.value}}</a></li>

             {{#if this.nextPage.check}}
                     <li><a class="pagination-link page-link" style="text-decoration:none" href="/seller/channel/product/?page={{this.nextPage.value}}">{{this.nextPage.value}}</a></li>
             {{/if}}
         </ul>
     </nav>


</div>


