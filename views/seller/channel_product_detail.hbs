{{#section 'css'}}
    <style>
        .card-img-top {
            max-height: 300px;
        }

        .border-bottom {
            padding-bottom: 20px;
        }
    </style>
{{/section}}

{{#section 'js'}}
        <script src="https://cdn.tiny.cloud/1/o97nc395odxihuh8oga04zckhjjvpcyw7fhsbn13j2t1j9as/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
                selector: '#txtArea',
                plugins: 'paste image link autolink lists table media',
                menubar: false,
                toolbar: [
                    'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright | forecolor backcolor | table link image media',
                ],
                height:'500'
            });

        </script>
{{/section}}



 <div class="container">
    <div class="card-header row justify-content-between" style="margin:0;">
        <span class="mt-2">
            <b>Tình trạng : </b>
            <span class="text-success">Thành công /</span>
        <span class="text-info">Đang bán / </span>
        <span class="text-danger">Thất bại</span>
        </span>

        <a class="btn btn-outline-info" href="#" role="button">
            <i class="fa fa-backward" aria-hidden="true"></i> Back
        </a>

    </div>

    <div class="row mt-3">
        <div class="col-lg-5">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://giaydabanh.vn/wp-content/uploads/2020/01/81092835_2287716724665816_6310979478218604544_n-300x300.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://htsport.vn/wp-content/uploads/2019/11/4-size-giay-lon-nhat-1-300x300.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://giaydabanh.vn/wp-content/uploads/2020/01/81092835_2287716724665816_6310979478218604544_n-300x300.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="h-100">
                <div class="card-body d-flex flex-column">
                    <div class="h2 border-bottom">
                        <b>{{this.product.proName}}</b>
                        <a href="#" role="button" class="h3 ml-5">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </div>

                    <ul class="list-group border-bottom" >
                        <li class="list-group-item" style="background-color:  #f7f7f9;">
                            <p class="mb-4 font-weight-bolder" >
                                <b class="h5">Giá hiện tại : </b>
                                <span class="h5">{{format_number this.product.proCurBidPrice}} VNĐ</span>
                            </p>
                        </li>
                        <li class="list-group-item" style="background-color:  #f7f7f9;">
                            <p class="mb-4 font-weight-bolder">
                                <b class="h5">Giá mua ngay :  </b>
                                <span class="h5">{{format_number this.product.proBuyNowPrice}} VNĐ</span>
                            </p>
                        </li>
                        <li class="list-group-item" style="background-color:  #f7f7f9;">
                            <p class="mb-4 font-weight-bolder">
                                <b class="h5">Danh mục : </b>
                                <span class="h5">
                                    {{this.product.catName}}

                                </span>

                                <a href="#" class="h2 ml-3">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                            </p>
                        </li>
                        <li class="list-group-item" style="background-color:  #f7f7f9;">
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                            <span class="input-group-text bg-white border-0 p-0" id="inputGroup-sizing-sm">
                                <b class="h5">Người đặt giá cao nhất :   </b>
                                <span class="h5">{{this.product.curBidderInfo}}</span>
                            </span>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item" style="background-color:  #f7f7f9;">
                            <p class="mb-4 font-weight-bolder">
                                <b class="h5">Ngày bán :  </b>
                                <span class="h5">{{format_date this.product.proStartDate}} </span>
                            </p>
                        </li>
                        <li class="list-group-item" style="background-color:  #f7f7f9;">
                            <p class="mb-4 font-weight-bolder">
                                <b class="h5">Ngày kết thúc :  </b>
                                <span class="h5">{{format_date this.product.proEndDate}} </span>
                            </p>
                        </li>
                    </ul>

                    <div class="row m-0 mt-5">
                        <div class="mt-auto">
                            <a class="btn btn-outline-success" href="/seller/channel/product/detail/{{this.product._id}}/list" role="button">
                                <i class="fa fa-list" aria-hidden="true"></i>
                                <span>
                                    Danh sách người mua
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row m-0 mt-5">
        <div class="card w-100">
            <div class="card-header d-flex justify-content-between">
                <nav>
                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">
                            <i class="fa fa-info-circle fa-2x mr-2" aria-hidden="true"></i>
                            Thông tin sản phẩm
                        </a>
                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">
                            <i class="fa fa-plus-circle fa-2x mr-2" aria-hidden="true"></i>
                            Thêm thông tin
                        </a>
                    </div>
                </nav>
            </div>
            <div class="card-body p-3">
                <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        {{{this.product.proDescription}}}
                    </div>
                    <div class="tab-pane fade"  id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                        <form method="post" action='/seller/channel/product/detail/{{this.product._id}}'>
                            <textarea class="form-control border-dark" name="proDescription"  placeholder="Mô tả sản phẩm" id="txtArea" rows="3"></textarea>
                            <button class="btn btn-lg btn-primary mt-5" type="submit">
                                <i class="fa fa-pencil fa-2x" aria-hidden="true"></i>
                                <span class="h3">Lưu</span>
                            </button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
            </div>
        </div>


    </div>
</div>
