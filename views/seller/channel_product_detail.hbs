{{#section 'css'}}
    <style>
        .card-img-top {
            max-height: 300px;
        }

        .border-bottom {
            padding-bottom: 20px;
        }
    </style>
{{/section}}



 <div class="container">
    <div class="card-header row justify-content-between" style="margin:0;">
        <span class="mt-2">
            <b>Tình trạng : </b>
            <span class="text-success">Thành công /</span>
        <span class="text-info">Đang bán / </span>
        <span class="text-danger">Thất bại</span>
        </span>

        <a class="btn btn-outline-info" href="#" role="button">
            <i class="fa fa-backward" aria-hidden="true"></i> Back
        </a>

    </div>

    <div class="row mt-3">
        <div class="col-lg-5">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://giaydabanh.vn/wp-content/uploads/2020/01/81092835_2287716724665816_6310979478218604544_n-300x300.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://htsport.vn/wp-content/uploads/2019/11/4-size-giay-lon-nhat-1-300x300.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://giaydabanh.vn/wp-content/uploads/2020/01/81092835_2287716724665816_6310979478218604544_n-300x300.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card h-100">
                <div class="card-header">
                    <div class="h2">
                        <b>{{this.product.proName}}</b>
                        <a href="#" role="button" class="h3 ml-5">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="mb-4">
                        <b class="h5">Giá hiện tại : </b>
                        <span class="text-danger h3">{{format_number this.product.proCurBidPrice}}</span>
                    </p>

                    <p class="mb-4">
                        <b class="h5">Giá mua ngay :  </b>
                        <span class="text-danger h3">{{format_number this.product.proBuyNowPrice}}</span>
                    </p>


                    <p class="mb-4">
                        <b class="h5">Danh mục : </b>
                        <span class="text-secondary h3">
                            {{this.product.catName}}

                        </span>

                        <a href="#" class="h2 ml-3">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </p>

                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white border-0 p-0" id="inputGroup-sizing-sm">
                                <b class="h5">Người đặt giá cao nhất :   </b>
                                <span class="text-info h3">{{this.product.curBidderInfo}}</span>
                            </span>
                        </div>
                    </div>

                    <div class="mt-auto">
                        <a class="btn btn-outline-success" href="/seller/channel/product/detail/{{this.product._id}}/list" role="button">
                            <i class="fa fa-list" aria-hidden="true"></i>
                            <span>
                                Danh sách người mua
                            </span>
                        </a>
                    </div>



                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                Ngày bán : {{this.product.proStartDate}}
                            </p>
                        </div>

                        <div class="col-md-6">
                            <p>
                                Ngày kết thúc : {{this.product.proEndDate}}
                            </p>
                        </div>

                        <div class="col-md-6">
                            <p>
                                Giá khởi điểm : <b>100.000 VNĐ</b>
                            </p>
                        </div>

                        <div class="col-md-6">
                            <p>
                                Mã hàng : {{_id}}
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row m-0 mt-5">
        <div class="card w-100">
            <div class="card-header d-flex justify-content-between">
                <b class="h3 m-0 mt-1">Mô tả sản phẩm</b>

                <a class="btn btn-outline-primary" href="#" role="button">
                    <i class="fa fa-pencil-square fa-2x" aria-hidden="true"></i>
                    <span class="h5">Thêm mô tả</span>
                </a>
            </div>
            <div class="card-body p-3">
                {{{this.product.proDescription}}}
            </div>
        </div>


    </div>
</div>
